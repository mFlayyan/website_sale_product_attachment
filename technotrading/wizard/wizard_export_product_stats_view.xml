<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_export_product_stats_wizard_form" model="ir.ui.view">
        <field name="name">export.product.stats.wizard.form</field>
        <field name="model">export.product.stats.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Product Statistics Export Wizard">
                <group colspan="4" col="4" attrs="{'invisible': [('state','!=','init')]}">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <group colspan="4" col="2" attrs="{'invisible': [('state','!=','generate_reports')]}">
                    <field name="file_name"/>
                    <field name="file_data" filename="file_name"/>
                </group>
                <field name="state" invisible="1"/>
                <group colspan="4" col="3">
                    <button type="special" special="cancel" string="Cancel" icon="gtk-cancel" states="init"/>
                    <button type="object" name="generate_reports" string="Generate Reports" icon="gtk-execute" states="init"/>
                    <button type="special" special="cancel" string="Close" icon="gtk-close" states="generate_reports"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_export_product_stats_wizard" model="ir.actions.act_window">
        <field name="name">Product Statistics Export</field>
        <field name="res_model">export.product.stats.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_export_product_stats_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_export_product_stats"
            parent="base.menu_product"
            action="action_export_product_stats_wizard"/>

</data>
</openerp>
