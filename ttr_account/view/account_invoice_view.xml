<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!--
	    =========== Add client_order_ref to invoice_tree ===========
		-->
		<record id="ttr_invoice_tree_x1" model="ir.ui.view">
			<field name="name">ttr.account.invoice.tree.x1</field>
			<field name="model">account.invoice</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="account.invoice_tree" />
			<field name="arch" type="xml">
			  <data>
				<field name="number" position="after">
					<field name="client_order_ref" />
				</field>
              </data>  
			</field>	
		</record>
        <!--
        =========== Add client_order_ref to view_account_invoice_filter ===========
        -->
        <record id="ttr_view_account_invoice_filter_x1" model="ir.ui.view">
            <field name="name">ttr.account.invoice.filter.x1</field>
            <field name="model">account.invoice</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter" />
            <field name="arch" type="xml">
              <data>
                <field name="number" position="after">
                    <field name="client_order_ref" />
                </field>
              </data>  
            </field>    
        </record>
	</data>
</openerp>
