<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="ttr_product_category_attribute_set assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/ttr_product_category_attribute_set/static/src/js/ttr_product_category_attribute_set.js"></script>
                <link rel="stylesheet" href="/ttr_product_category_attribute_set/static/src/css/ttr_product_category_attribute_set.css"/>
            </xpath>
        </template>

        <record id ="product_show_ttr_fields" model="ir.ui.view">
            <field name="name"> product.product.show.ttr.fields </field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']" position="after">
                    <page string="Magento Product Attributes" id="mpa">
                        here magento derived fields
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
