<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="product_product_form_view_technotrading" model="ir.ui.view">
        <field name="name">product.product.form.view.technotrading</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <field name="price_extra" position="after">
                <field name="discount"/>
            </field>
            <field name="supply_method" position="after">
                <field name="logistic_costs_perc"/>
                <field name="clearance_costs_perc"/>
                <field name="logistic_costs_product"/>
            </field>
            <xpath expr="//page[@string='Descriptions']/separator[@string='Description']" position="before">
                <separator string="Comment"/>
                <field name="comment" colspan="4" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_stock_form_view_technotrading" model="ir.ui.view">
        <field name="name">product.product.stock.from.view.technotrading</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_normal_stock_property_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <field name="virtual_available" position="after">
                <newline/>
                <field name="stock_value"/>
            </field>
        </field>
    </record>

</data>
</openerp>
