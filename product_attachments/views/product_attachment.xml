<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="product_template_form_view_inherited" model="ir.ui.view">
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='list_price']" position="after">
          <field name="attachments" widget="many2many_binary" label="Attachments" context="{'default_res_id':id, 'default_parent_id':product_attachments.shop_attachment_dir.id}"/>
        </xpath>
      </field>
    </record>
  </data>
</openerp>
