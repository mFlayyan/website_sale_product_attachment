<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            =========== Add line to sale order form ===========
        -->
        <record
            id="ttr_view_order_form_x1"
            model="ir.ui.view">
            <field name="name">ttr.sale.order.form.x1</field>
            <field name="model">sale.order</field>
            <field name="type">tree</field>
            <field
                name="inherit_id"
                ref="sale.view_order_form" />
            <field
                name="arch"
                type="xml">
                <data>
                    <xpath
                        expr="//field[@name='order_line']/form/notebook/page/group/field[@name='product_uos']"
                        position="after">
                        <field name="line" />
                    </xpath>
                    <xpath
                        expr="//field[@name='order_line']/tree/field[@name='name']"
                        position="before">
                        <field name="line" />
                    </xpath>
                </data>
            </field>
        </record>
        <!--
            =========== Add client_order_ref to view_sales_order_filter ===========
        -->
        <record
            id="ttr_view_sales_order_filter_x1"
            model="ir.ui.view">
            <field name="name">ttr.sale.order.list.select.x1</field>
            <field name="model">sale.order</field>
            <field name="type">search</field>
            <field
                name="inherit_id"
                ref="sale.view_sales_order_filter" />
            <field
                name="arch"
                type="xml">
                <data>
                    <field
                        name="name"
                        position="after">
                        <field name="client_order_ref" />
                    </field>
                </data>
            </field>
        </record>
        <!--
            =========== Add line to view_sales_order_filter ===========
        -->
        <record
            id="ttr_view_order_line_form2_x1"
            model="ir.ui.view">
            <field name="name">ttr.sale.order.line.form2.x1</field>
            <field name="model">sale.order.line</field>
            <field name="type">form</field>
            <field
                name="inherit_id"
                ref="sale.view_order_line_form2" />
            <field
                name="arch"
                type="xml">
                <data>
                    <field
                        name="product_uom"
                        position="after">
                        <field name="line" />
                    </field>
                </data>
            </field>
        </record>        
	
	<!-- This view overwrites an override from base_sale_multichannels,
	     only to change the tab on the product form on which the external information
	     is referenced. Can't seem to change the expr property on the original form
	     using a normal xpath override on the original xpath element...
	  -->
        <record model="ir.ui.view" id="base_sale_multichannels.base_sale_multichannel_view_order_form">
            <field name="name">base_sale_multichannel_view_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_automatic_workflow.sale_order_view_form" />
            <field name="type">form</field>
            <field eval="30" name="priority"/>
            <field name="arch" type="xml">
                <data>
                    <group name="automatic_workflow" position="after">
                        <field name="referential_id" invisible="True"/>
                        <group name="external_payment" attrs="{'invisible': [('referential_id', '=', False)]}">
                            <separator string="External Payment" colspan="4"/>
                            <field name="ext_total_amount" />
                            <field name="need_to_update" select="1"/>
                        </group>
                    </group>
                    <!-- xpath expr="/form/notebook/page/field/form/notebook/page[@string='Order Line']/group" position="after" -->
                    <xpath expr="/form/notebook/page/field/form/notebook/page[@string='Extra Info']" position="inside">
                        <group name='External Information' colspan="4">
                            <separator string="External Information" colspan="4" />
                            <field name="ext_product_ref" select="1" />
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

</data>
</openerp>
